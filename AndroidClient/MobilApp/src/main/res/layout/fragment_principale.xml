<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.mobileapplication.PrincipaleFragment">
    <!-- le premier champs -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="322dp"
        android:layout_height="68dp"
        android:id="@+id/logement"
        android:background="?attr/colorControlHighlight"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp">

        <Spinner
            android:layout_width="73dp"
            android:layout_height="26dp"
            android:id="@+id/spinner1"
            android:spinnerMode="dialog"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.97" />

        <TextView
            android:text="Type de logement"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:id="@+id/textView3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.06" />
    </android.support.constraint.ConstraintLayout>
    <!-- Le deuxieme  champs -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="322dp"
        android:layout_height="68dp"
        android:id="@+id/location"
        android:background="?attr/colorButtonNormal"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/logement">

        <Spinner
            android:layout_width="73dp"
            android:layout_height="26dp"
            android:id="@+id/spinner2"
            android:spinnerMode="dialog"
            tools:layout_editor_absoluteY="37dp"
            tools:layout_editor_absoluteX="248dp" />

        <TextView
            android:text="Localisation"
            android:layout_width="108dp"
            android:layout_height="31dp"
            android:id="@+id/textView4"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="34dp" />
    </android.support.constraint.ConstraintLayout>
    <!-- le troixieme champs -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="322dp"
        android:layout_height="68dp"
        android:id="@+id/avancée"
        android:background="?attr/colorControlHighlight"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/location">

        <Spinner
            android:layout_width="73dp"
            android:layout_height="26dp"
            android:id="@+id/spinner3"
            android:spinnerMode="dialog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:text="Recherche avancée"
            android:layout_width="124dp"
            android:layout_height="39dp"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.06" />
    </android.support.constraint.ConstraintLayout>
    <!-- Le bouton -->

    <Button
        android:text="Lancer la recherche"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:id="@+id/lancer"
        android:background="?attr/colorControlHighlight"
        android:onClick="chercher"
        android:layout_marginLeft="-31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/avancée" />



</android.support.constraint.ConstraintLayout>
