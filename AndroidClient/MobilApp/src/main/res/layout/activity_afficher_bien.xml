<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_afficher_bien"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.mobileapplication.AfficherBien">

    <ImageView
        android:layout_width="384dp"
        android:layout_height="162dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/Imbien"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <RatingBar
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="216dp"
        android:id="@+id/note"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/Imbien" />

    <TextView
        android:text="TextView"
        android:layout_width="159dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="25dp"
        android:id="@+id/PropB"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:text="TextView"
        android:layout_width="159dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="202dp"
        android:id="@+id/wilaya"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/note" />

    <TextView
        android:text="Prendre Rendez-vous"
        android:layout_width="154dp"
        android:layout_height="51dp"
        android:id="@+id/rdvP"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/comment"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/wilaya" />

    <TextView
        android:text="Laisser commentaire"
        android:layout_width="154dp"
        android:layout_height="51dp"
        android:id="@+id/comment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintVertical_bias="0.52"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/PropB" />

</android.support.constraint.ConstraintLayout>
